<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorMapRipple</item>
        <item name="colorPrimaryVariant">@color/colorStoryText</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorHeaderText</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="themeColor">#F97925</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.MyApplication">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/colorSplashGreen</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">@drawable/ic_launcher_icon</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">
            shortEdges
        </item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorSplashGreen</item>
    </style>



    <style name="text_xsmall">
        <item name="android:textSize">@dimen/xsmall_text</item>
    </style>

    <style name="text_small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="text_medium">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="text_x_medium">
        <item name="android:textSize">@dimen/x_medium_text</item>
    </style>

    <style name="text_large">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="text_xlarge">
        <item name="android:textSize">@dimen/xlarge_text</item>
    </style>

    <style name="text_xxlarge">
        <item name="android:textSize">@dimen/xxlarge_text</item>
    </style>

    <style name="text_xxxlarge">
        <item name="android:textSize">@dimen/xxxlarge_text</item>
    </style>

    <style name="text_xllarge">
        <item name="android:textSize">@dimen/xllarge_text</item>
    </style>

    <style name="text_vilarge">
        <item name="android:textSize">@dimen/vilarge_text</item>
    </style>

    <style name="edt_signup">
        <item name="android:layout_height">@dimen/edt_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/_margin_half</item>
        <item name="android:background">@drawable/edt_bg_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/colorHeaderText</item>
        <item name="android:paddingLeft">@dimen/_padding</item>
        <item name="android:paddingRight">@dimen/_padding_half</item>
        <item name="carbon_cursorColor">@color/colorBlack</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
    </style>

    <style name="edt_search">
        <item name="android:layout_height">@dimen/edt_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/_margin_half</item>
        <item name="android:background">@drawable/bg_edt_search</item>
        <item name="android:singleLine">true</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/colorHeaderText</item>
        <item name="android:paddingLeft">@dimen/_padding</item>
        <item name="android:paddingRight">@dimen/_padding_half</item>
        <item name="carbon_cursorColor">@color/colorBlack</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
    </style>

    <style name="text_signup_error_msg" parent="text_small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
    </style>

    <style name="text_signup_labels" parent="text_medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/_margin</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
    </style>

    <style name="btn_style">
        <item name="android:background">@drawable/bg_black_btn_with_round_corner</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="carbon_cornerRadius">@dimen/_corner_radius_25</item>

    </style>

    <style name="edt_otp_style">
        <item name="android:background">@drawable/bg_edt</item>
        <item name="android:layout_width">@dimen/otp_width</item>
        <item name="android:layout_height">@dimen/otp_height</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="tag_style">
        <item name="android:layout_width">@dimen/tag_width</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginRight">@dimen/_margin</item>
        <item name="android:layout_marginBottom">@dimen/_margin</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:paddingHorizontal">@dimen/_padding_half</item>
        <item name="android:textSize">@dimen/xxsmall_text</item>
        <item name="carbon_cornerRadius">@dimen/_corner_radius</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="bottom_sheet_button">
        <item name="android:textSize">@dimen/carbon_textSizeButton</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">@dimen/carbon_paddingHalf</item>
        <item name="carbon_cornerRadius">@dimen/carbon_cornerRadiusButton</item>
        <item name="carbon_elevation">@dimen/carbon_elevationButton</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="tabBackground">@drawable/bg_tab_unselected</item>
    </style>

    <style name="MyCustomSelectTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="tabBackground">@drawable/bg_tab_selected</item>
    </style>

    <style name="incl_venue_style">
        <item name="android:layout_marginRight">@dimen/_margin_20</item>
        <item name="android:layout_marginLeft">@dimen/_margin_20</item>
    </style>
    <attr name="themeColor" format="color"/>

    <style name="line_light">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/colorSemiGrey</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MyDatePickerTheme" parent="DatePicker" tools:targetApi="lollipop">
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>


    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?themeColor</item>
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">
            @style/DatePickerButtonStyle
        </item>
        <item name="android:buttonBarNegativeButtonStyle" tools:targetApi="lollipop">
            @style/DatePickerButtonStyle
        </item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker" tools:targetApi="lollipop">
        <item name="android:datePickerMode">spinner</item>
        <item name="colorControlNormal">?themeColor</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="radio_button_age" parent="text_medium">
        <item name="android:textColor">@color/radio_button_selector</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:background">@drawable/rb_age_bg_selector</item>
        <item name="android:button">@null</item>
        <item name="android:layout_margin">@dimen/_margin_half_half</item>
    </style>

</resources>