<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_onbaording_title"
            android:layout_marginTop="@dimen/_margin_20"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/text_xllarge"
            android:layout_marginLeft="@dimen/_margin_20"
            android:layout_marginRight="@dimen/_margin_20"
            tools:text="Your one stop shop for going out."
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/_margin_10"
            app:layout_constraintRight_toRightOf="@id/tv_onbaording_title"
            app:layout_constraintLeft_toLeftOf="@id/tv_onbaording_title"
            app:layout_constraintTop_toBottomOf="@id/tv_onbaording_title"
            android:text="@string/txt_onboarding"
            android:layout_width="0dp"
            android:textColor="@color/colorGrey"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>