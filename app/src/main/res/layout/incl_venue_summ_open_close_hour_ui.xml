<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <carbon.widget.ConstraintLayout
        app:carbon_cornerRadius="@dimen/_corner_radius"
        android:background="@color/colorSemiGrey"
        android:layout_margin="@dimen/_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_basic"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_margin_half"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/incl_mon"
                bind:desc="@{@string/txt_monday}"
                android:visibility="gone"
                bind:img="@{@drawable/ic_clock}"
                layout="@layout/incl_image_with_title_desc"/>

            <include
                bind:desc="@{@string/txt_tuesday}"
                bind:img="@{@drawable/ic_clock}"
                android:id="@+id/incl_tues"
                android:visibility="gone"
                layout="@layout/incl_image_with_title_desc"/>

            <include
                android:id="@+id/incl_wed"
                bind:img="@{@drawable/ic_clock}"
                bind:desc="@{@string/txt_wednesday}"
                android:visibility="gone"
                layout="@layout/incl_image_with_title_desc"/>

            <include
                android:id="@+id/incl_thurs"
                bind:img="@{@drawable/ic_clock}"
                bind:desc="@{@string/txt_thursday}"
                android:visibility="gone"
                layout="@layout/incl_image_with_title_desc"/>

            <include
                android:id="@+id/incl_fri"
                bind:img="@{@drawable/ic_clock}"
                android:visibility="gone"
                bind:desc="@{@string/txt_friday}"
                layout="@layout/incl_image_with_title_desc"/>

            <include
                android:id="@+id/incl_sat"
                bind:img="@{@drawable/ic_clock}"
                android:visibility="gone"
                bind:desc="@{@string/txt_saturday}"
                layout="@layout/incl_image_with_title_desc"/>

            <include
                android:id="@+id/incl_sun"
                bind:img="@{@drawable/ic_clock}"
                bind:desc="@{@string/txt_sunday}"
                android:visibility="gone"
                layout="@layout/incl_image_with_title_desc"/>

        </LinearLayout>




    </carbon.widget.ConstraintLayout>

</layout>