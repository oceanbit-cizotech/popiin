<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            bind:title="@{@string/txt_venue_summary}"
            bind:isHide="@{true}"
            android:id="@+id/top_header"
            layout="@layout/incl_header_with_back"/>

        <carbon.widget.ImageView
            android:id="@+id/iv_venue_summary"
            android:padding="@dimen/_padding_half"
            app:carbon_cornerRadius="@dimen/_corner_radius_18"
            android:background="@color/colorBlue"
            android:layout_marginLeft="@dimen/_margin_20"
            app:layout_constraintTop_toTopOf="@id/tv_venue_name"
            app:layout_constraintBottom_toBottomOf="@id/txt_venue_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_venue_item"
            android:layout_width="@dimen/img_setting_item_size"
            android:layout_height="@dimen/img_setting_item_size" />

        <TextView
            android:id="@+id/tv_venue_name"
            android:layout_marginTop="@dimen/_margin_20"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/colorHeaderText"
            android:textSize="@dimen/medium_text"
            android:layout_marginLeft="@dimen/_margin_half"
            app:layout_constraintTop_toBottomOf="@id/top_header"
            app:layout_constraintLeft_toRightOf="@id/iv_venue_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/txt_venue_name"
            style="@style/text_xsmall"
            android:id="@+id/txt_venue_name"
            android:textColor="@color/colorSecondaryText"
            app:layout_constraintLeft_toLeftOf="@id/tv_venue_name"
            app:layout_constraintTop_toBottomOf="@id/tv_venue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/_margin_half_mid"
            android:id="@+id/txt_venue_description"
            android:textColor="@color/colorStoryText"
            android:layout_marginRight="@dimen/_margin_20"
            style="@style/text_xsmall"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/iv_venue_summary"
            app:layout_constraintTop_toBottomOf="@id/txt_venue_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="@dimen/_margin"
            app:layout_constraintBottom_toTopOf="@id/view_venue_summary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_venue_description"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingBottom="@dimen/_padding"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/incl_venue_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:title="@{@string/txt_basic_info}"
                    android:id="@+id/incl_basic_info"
                    layout="@layout/incl_header_venue"/>

                <include
                    android:visibility="gone"
                    android:id="@+id/incl_venue_summ_basic_info"
                    android:layout_marginHorizontal="@dimen/_margin_20"
                    app:layout_constraintTop_toBottomOf="@id/incl_basic_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/incl_venue_summary_basic_info"/>

                <View
                    android:id="@+id/view_basic_info"
                    android:layout_marginTop="@dimen/_margin"
                    android:background="@color/colorRVBorder"
                    app:layout_constraintTop_toBottomOf="@id/incl_venue_summ_basic_info"
                    app:layout_constraintRight_toRightOf="@id/incl_venue_summ_basic_info"
                    app:layout_constraintLeft_toLeftOf="@id/incl_venue_summ_basic_info"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <include
                    android:layout_marginTop="@dimen/_margin"
                    app:layout_constraintTop_toBottomOf="@id/view_basic_info"
                    style="@style/incl_venue_style"
                    android:id="@+id/incl_address_details"
                    bind:title="@{@string/txt_address}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/incl_header_venue"/>

                <include
                    android:visibility="gone"
                    android:id="@+id/incl_venue_address_details"
                    android:layout_marginHorizontal="@dimen/_margin_20"
                    app:layout_constraintTop_toBottomOf="@id/incl_address_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/incl_venue_summ_address_ui"/>

                <View
                    android:id="@+id/view_address"
                    android:layout_marginTop="@dimen/_margin"
                    android:background="@color/colorRVBorder"
                    app:layout_constraintTop_toBottomOf="@id/incl_venue_address_details"
                    app:layout_constraintRight_toRightOf="@id/incl_venue_address_details"
                    app:layout_constraintLeft_toLeftOf="@id/incl_venue_address_details"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <include
                    android:layout_marginTop="@dimen/_margin"
                    app:layout_constraintTop_toBottomOf="@id/view_address"
                    style="@style/incl_venue_style"
                    bind:title="@{@string/txt_opening_hours_caps}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/incl_open_close_hour"
                    layout="@layout/incl_header_venue"/>

                <include
                    android:visibility="gone"
                    android:id="@+id/incl_venue_open_close"
                    android:layout_marginHorizontal="@dimen/_margin_20"
                    app:layout_constraintTop_toBottomOf="@id/incl_open_close_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/incl_venue_summ_open_close_hour_ui"/>


                <View
                    android:id="@+id/view_open_close_hour"
                    android:layout_marginTop="@dimen/_margin"
                    android:background="@color/colorRVBorder"
                    app:layout_constraintTop_toBottomOf="@id/incl_venue_open_close"
                    app:layout_constraintRight_toRightOf="@id/incl_venue_open_close"
                    app:layout_constraintLeft_toLeftOf="@id/incl_venue_open_close"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <include
                    android:layout_marginTop="@dimen/_margin"
                    app:layout_constraintTop_toBottomOf="@id/view_open_close_hour"
                    style="@style/incl_venue_style"
                    bind:title="@{@string/txt_other_details}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/incl_other_details"
                    layout="@layout/incl_header_venue"/>

                <include
                    android:visibility="gone"
                    android:id="@+id/incl_venue_other_details"
                    android:layout_marginHorizontal="@dimen/_margin_20"
                    app:layout_constraintTop_toBottomOf="@id/incl_other_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/incl_venue_summ_other_details_ui"/>

                <View
                    android:id="@+id/view_other_details"
                    android:layout_marginTop="@dimen/_margin"
                    android:background="@color/colorRVBorder"
                    app:layout_constraintTop_toBottomOf="@id/incl_venue_other_details"
                    app:layout_constraintRight_toRightOf="@id/incl_venue_other_details"
                    app:layout_constraintLeft_toLeftOf="@id/incl_venue_other_details"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


        <View
            android:id="@+id/view_venue_summary"
            android:layout_marginBottom="@dimen/_margin"
            app:layout_constraintBottom_toTopOf="@id/btn_save"
            android:background="@color/colorRVBorder"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <carbon.widget.TextView
            android:id="@+id/btn_save"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/_margin"
            android:layout_marginHorizontal="@dimen/_margin"
            app:layout_constraintBottom_toTopOf="@id/ll_venue_footer"
            style="@style/btn_style"
            android:gravity="center"
            android:fontFamily="@font/inter_regular"
            android:text="@string/txt_save"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height" />

        <LinearLayout
            android:id="@+id/ll_venue_footer"
            android:layout_marginBottom="@dimen/_margin"
            android:weightSum="2"
            android:layout_marginHorizontal="@dimen/_margin_half"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edt_height">

            <carbon.widget.LinearLayout
                android:id="@+id/ll_edit"
                android:layout_marginRight="@dimen/_margin_half_half"
                android:layout_marginLeft="@dimen/_margin_half"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                app:carbon_cornerRadius="@dimen/_corner_radius_25"
                android:drawablePadding="@dimen/_padding_half"
                android:layout_width="match_parent"
                android:background="@color/colorSemiGrey"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginRight="@dimen/_margin_half"
                    android:src="@drawable/ic_venue_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <carbon.widget.TextView
                    android:textColor="@color/colorHeaderText"
                    android:gravity="center"
                    android:text="@string/txt_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </carbon.widget.LinearLayout>


            <carbon.widget.TextView
                android:id="@+id/tv_submit_save"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="@dimen/_margin_half"
                android:layout_marginLeft="@dimen/_margin_half_half"
                app:carbon_cornerRadius="@dimen/_corner_radius_25"
                android:drawablePadding="@dimen/_padding_half"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_black_btn_with_round_corner"
                android:text="@string/txt_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>