    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="@dimen/_padding_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingVertical="@dimen/_padding_half_half"
            android:id="@+id/img_tag"
            android:layout_width="@dimen/map_list_item_tv_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/map_list_item_tv_height"
            tools:src="@drawable/ic_bar_glass_lemon" />

        <TextView
            android:paddingVertical="@dimen/_padding_half"
            android:id="@+id/tv_tag"
            android:layout_marginLeft="@dimen/_margin_half_half"
            android:textColor="@color/colorStoryText"
            tools:text="Kolot"
            style="@style/text_xsmall"
            app:layout_constraintLeft_toRightOf="@id/img_tag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>