<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <carbon.widget.ImageView
            android:layout_marginHorizontal="@dimen/_margin_half"
            android:id="@+id/iv_img_venues"
            android:scaleType="centerCrop"
            app:carbon_cornerRadius="@dimen/_corner_radius_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/explore_detail_img_size"
            android:layout_height="@dimen/explore_detail_img_size"/>

        <TextView
            android:id="@+id/tv_number"
            app:layout_constraintLeft_toLeftOf="@id/iv_img_venues"
            app:layout_constraintRight_toRightOf="@id/iv_img_venues"
            app:layout_constraintBottom_toBottomOf="@id/iv_img_venues"
            app:layout_constraintTop_toTopOf="@id/iv_img_venues"
            tools:text="+10"
            android:visibility="gone"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/plus_jakarta_extra_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>